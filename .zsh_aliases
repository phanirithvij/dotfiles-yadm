#!/usr/bin/env zsh
alias ls='ls --color=auto'
alias l='ls'
alias ll='ls -l'
alias la='ls -a'

alias c='clear'
alias e='exit'

alias opop='xdg-open'

alias proj="cd /media/rithviz/Storage/Projects"
alias my_ip="ip address | grep -o \"inet 192.*/\" | awk '{ print \$2 }' | tr / ' ' | xargs"
alias vim="$VIM"

alias livestream_screenkey="screenkey -s large --scr 2 -p bottom --geometry 1210x300+712+810";
alias yt_screenkey="screenkey -s large --scr 1 -p bottom --geometry 510x300+1412+850";

# https://github.com/jesseduffield/lazygit/discussions/1201#discussioncomment-641939
alias lazyconf="lazygit -ucd ~/.local/share/yadm/lazygit -w ~ -g ~/.local/share/yadm/repo.git"
